<%- include('partials/header') %>
  
<div class="container mt-5">
    <a href="/" class="btn btn-lg btn-primary">Tilbage</a>
    <h1>Log ind</h1>
    <form method="POST" action="/login" autocomplete="off">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Indtast din email" class="form-control" id="inputEmail" required>
        </div>
        <div class="form-group">
            <label for="password">Kodeord</label>
            <input type="password" placeholder="Indtast dit kodeord" name="password" class="form-control" id="inputPassword" required>
        </div>
        <button type="submit" class="btn btn-primary">Log ind</button>
        <a href="/register" type="submit" class="btn btn-secondary">Eller opret dig som bruger</a>
    </form>
</div>

<%- include('partials/footer') %>
