<%- include('partials/header') %>

<div class="container mt-5">

    <a href="/user" class="btn btn-lg btn-primary">Tilbage</a>
    <h1>Log ind</h1>
    <form method="POST" action="/user/loginUser" autocomplete="off">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Indtast din email" class="form-control" id="inputEmail" autocomplete="email" required>
        </div>
        <div class="form-group">
            <label for="password">Kodeord</label>
            <input type="password" placeholder="Indtast dit kodeord" name="password" class="form-control" id="inputPassword" autocomplete="new-password" required>
        </div>
        <button type="submit" class="btn btn-primary">Log ind</button>
        <a href="/user/register" type="submit" class="btn btn-secondary">Eller opret dig som bruger</a>
    </form>
</div>

<%- include('partials/footer') %>
