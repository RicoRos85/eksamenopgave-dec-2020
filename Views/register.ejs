<%- include('partials/header') %>

<div class="container mt-5">
    <a href="/" class="btn btn-lg btn-primary">Tilbage</a>
    <h1>Opret bruger</h1>
    <form method="POST" action="/user/registerNew" autocomplete="off">
        <div class="form-group">
            <label for="name">Navn</label>
            <input type="text" name="userName" placeholder="Indtast dit navn" class="form-control" id="inputName" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Indtast din email" class="form-control" id="inputEmail" autocomplete="email" required>
        </div>
        <div class="form-group">
            <label for="password">Kodeord</label>
            <input type="password" placeholder="Indtast dit kodeord" name="password" class="form-control" id="inputPassword" autocomplete="new-password" required>
        </div>
        <button type="submit" class="btn btn-primary">Opret</button>
        <a href="/user/login" type="submit" class="btn btn-secondary">Allerede bruger? Log ind</a>
    </form>
</div>

<%- include('partials/footer') %>
